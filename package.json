{
  "name": "node",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "watch": "nodemon server.js",
    "test": "nyc mocha",
    "lint": "eslint .",
    "lint-fix": "npm run lint -- --fix",
    "pretest": "npm run lint-fix",
    "knex": "node -r dotenv/config ./node_modules/knex/bin/cli.js --knexfile app/config/knexfile.js",
    "knex-rollback": "npm run knex migrate:rollback",
    "knex-migrate": "npm run knex migrate:latest",
    "knex-refresh": "npm run knex migrate:rollback --all && npm run knex migrate:latest",
    "knex-seed": "npm run knex seed:run",
    "deploy": "npm run knex-migrate && npm run knex-seed && pm2-runtime ecosystem.config.js",
    "generate-module": "node app/console/module-generator.js",
    "generate-key": "node app/console/app-key-generator.js",
    "generate-task": "node app/console/task-generator.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "@sendgrid/mail": "^6.4.0",
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "bottlejs": "^1.7.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "express-mung": "^0.5.1",
    "glob": "^7.1.4",
    "knex": "^0.19.5",
    "moment": "^2.24.0",
    "mysql": "^2.17.1",
    "no-case": "^2.3.2",
    "oauth2-server": "^3.0.1",
    "objection": "^2.0.6",
    "objection-password": "^2.0.0",
    "objection-soft-delete": "^1.0.7",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.2.0",
    "sprintf-js": "^1.1.2",
    "sticky-session": "^1.1.2",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.3.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.13.0",
    "mocha": "^10.2.0",
    "nyc": "^14.1.1",
    "pluralize": "^8.0.0",
    "sinon": "^7.5.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "google"
    ],
    "env": {
      "node": true,
      "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    },
    "rules": {
      "prefer-template": 1,
      "no-console": 0,
      "space-infix-ops": [
        "error",
        {
          "int32Hint": false
        }
      ],
      "max-len": [
        1,
        160,
        4
      ]
    },
    "globals": {
      "container": true,
      "cronTasks": true
    }
  },
  "eslintIgnore": [
    "node_modules"
  ]
}
